  body 
    - let isMember = false;
    - if(currentUser)
      - isMember = (currentUser.membershipCode > 0 ? true: false);
    header 
      nav
        ul 
          li 
            a(href="/") Home
          li 
            a(href="/signup") Sign Up 
          if(!currentUser)
            li 
              a(href="/login") Login
          else
            li 
              a(href="/logout") Log out 
            li 
              a(href="/create") Create a Post
          if(!isMember)
            li 
              a(href="/join") Become a member 
          
        

    .content 
      block content