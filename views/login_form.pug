extends layout
block content 
  div.content-layout
    h2.title Login
    div.form-container
      form(method="POST") 
        div.input-group.mb-3
          span.input-group-text Username: 
          input.form-control(type="text" name="username" required)
        div.input-group.mb-3
          span.input-group-text Password: 
          input.form-control(type="password" name="password" required)
        div.input-group.mb-3
          button.btn.btn-success.mx-auto(type="submit") Login

    if (failArray)
      p.text-danger.text-center=failArray.pop()